{% extends 'base.html.twig' %}

{% block body %}
    <h1>Use Pack</h1>
    <form method="post" action="{{ path('app_account_use_pack') }}">
        <select name="pack_id">
            {% for userPack in user.userPacks %}
                <option value="{{ userPack.pack.id }}">{{ userPack.pack.name }} ({{ userPack.usedQuantity }}/{{ userPack.pack.quantity }})</option>
            {% endfor %}
        </select>
        <button class="btn">Use</button>
    </form>
{% endblock %}